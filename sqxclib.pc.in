prefix=@SQXCLIB_PC_PREFIX@
exec_prefix=${prefix}
includedir=${prefix}/include
libdir=${exec_prefix}/lib

Name: sqxclib
Description: sqxclib is a library to convert data between C language and SQL (or JSON...etc).
Version: @SQXCLIB_PC_VERSION@
Requires: @SQXCLIB_PC_REQUIRE_MYSQL@ @SQXCLIB_PC_REQUIRE_SQLITE@ @SQXCLIB_PC_REQUIRE_JSONC@
Cflags: -I${includedir}/sqxc -I${includedir}/sqxc/app -I${includedir}/sqxc/support
Libs: -L${libdir} -lsqxcapptool -lsqxcsupport -lsqxcapp @SQXCLIB_PC_LIB_MYSQL@ @SQXCLIB_PC_LIB_SQLITE@ @SQXCLIB_PC_LIB_CXX@ -lsqxc
